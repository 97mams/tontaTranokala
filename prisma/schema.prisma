generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model GroupSite {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  visits    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type     String    @default("site")
  siteId    site[]
  palteformId plateform[]
}

model site {
  id      Int     @id @default(autoincrement())
  name    String
  description String
  url     String?  @unique
  GroupSiteId Int
  GroupSite GroupSite @relation(fields: [GroupSiteId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model plateform {
  id          Int     @id @default(autoincrement())
  name       String
  email     String
  passWord   String
  description String
  url        String?  @unique
  GroupSiteId Int
  GroupSite  GroupSite @relation(fields: [GroupSiteId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}